{
	"githubPullRequests.ignoredPullRequestBranches": ["development"],
	"vs-code-prettier-eslint.prettierLast": false,
  "explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"next.config.ts": "next-env.d.ts",
		"tsconfig.json": "tsconfig.*.json, jsconfig*.json",
		"package.json": "package-lock.json, *.config.mjs, *.config.js"
	},
  "editor.defaultFormatter": "esbenp.prettier-vscode",
	// If you are changing these quote rules, don't forget to update quote rules in prettier.config.mjs
	"html.completion.attributeDefaultValue": "doublequotes",
	"javascript.preferences.quoteStyle": "double",
	"typescript.preferences.quoteStyle": "double",
	// vscode says this line doesn't work here if you open it in a workspace, I honestly don't know how this works at the moment of writing
	// but I would recommend you add this line to your user settings.json
	// Further reading: https://cva.style/docs/getting-started/installation#intellisense
	"tailwindCSS.classFunctions": ["cva", "cx"]
}
